{
  "name": "pulumi-github-action",
  "version": "2.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:pulumi/actions",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf coverage build tmp dist",
    "prebuild": "yarn run clean",
    "build": "ncc build src/main.ts -e typescript -o dist --source-map",
    "postbuild": "node scripts/replace-ts.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage src/**/*",
    "test:watch": "jest --watch",
    "postinstall": "husky install .github/husky"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    ".eslintrc": "prettier --write",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.2",
    "@types/faker": "^6.6.11",
    "@types/jest": "~29.5.14",
    "@types/node": "~22.10.10",
    "@typescript-eslint/eslint-plugin": "~8.21.0",
    "@typescript-eslint/parser": "~8.21.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "~9.18.0",
    "eslint-config-prettier": "~10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "~28.11.0",
    "faker": "^6.6.6",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-playback": "^4.1.0",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "rimraf": "~6.0.1",
    "ts-jest": "~29.2.5"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2",
    "@pulumi/pulumi": "3.147.0",
    "actions-parsers": "^1.0.2",
    "ansi-to-html": "^0.7.2",
    "dedent": "^1.5.3",
    "envalid": "^8.0.0",
    "got": "^14.4.5",
    "runtypes": "^7.0.1",
    "semver": "^7.6.3",
    "ts-invariant": "^0.10.3",
    "typescript": "4.5"
  }
}

{
  "name": "pulumi-github-action",
  "version": "2.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:pulumi/actions",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf coverage build tmp dist",
    "prebuild": "yarn run clean",
    "build": "ncc build src/main.ts -e typescript -o dist --source-map",
    "postbuild": "node scripts/replace-ts.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage src/**/*",
    "test:watch": "jest --watch",
    "postinstall": "husky install .github/husky"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    ".eslintrc": "prettier --write",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.2",
    "@types/faker": "^6.6.9",
    "@types/jest": "~29.5.12",
    "@types/node": "~20.12.8",
    "@typescript-eslint/eslint-plugin": "~7.8.0",
    "@typescript-eslint/parser": "~7.8.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "~9.2.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "~28.5.0",
    "faker": "^6.6.6",
    "husky": "^9.0.11",
    "jest": "~29.7.0",
    "jest-playback": "^4.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "~5.0.5",
    "ts-jest": "~29.1.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "@pulumi/pulumi": "3.115.0",
    "actions-parsers": "^1.0.2",
    "dedent": "^1.5.3",
    "envalid": "^8.0.0",
    "got": "^14.2.1",
    "runtypes": "^6.7.0",
    "semver": "^7.5.1",
    "ts-invariant": "^0.10.3",
    "typescript": "4.5"
  }
}
